<Window x:Class="PrL.NewUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrL"
        mc:Ignorable="d"
        Title="New User" Height="390" Width="300" FontSize="14" Background="#FF245170" Foreground="#FF341010">
    <Border Background="#FF2B2323" CornerRadius="20" Margin="20,20,20,12" >
        <StackPanel Margin="20,20,20,16">
            <Label  Content="New User:" Foreground="Wheat" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="Username" Foreground="Wheat"/>
            <TextBox x:Name="NewTextUser" Background="Gray"  FontSize="18"/>
            <Label Content="Password" Foreground="Wheat"/>
            <PasswordBox x:Name="NewTextPass" Foreground="Wheat" FontSize="18" Background="Gray"/>
            <Label Content="Password again" Foreground="Wheat"/>
            <PasswordBox x:Name="NewTextPassAgain" Foreground="Wheat" FontSize="18" Background="Gray"/>
            <Button  x:Name="SubmitNewUser" Content="Submit" Background="Gray" Margin="60,14" Click="SubmitNewUser_Click" Focusable="True" IsDefault="True"/>

        </StackPanel>
    </Border>
</Window>
